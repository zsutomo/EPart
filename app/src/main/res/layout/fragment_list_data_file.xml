<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DataPartFragment"
    android:background="#bb7ba8f7"
    android:padding="5dp">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:id="@+id/bg_et_cari"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:hint="Cari Nomor Part"
            android:inputType="text"
            android:id="@+id/et_cari"
            android:padding="5dp"
            android:imeOptions="actionSearch"
            android:background="@drawable/rect_gradient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_file"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_below="@+id/bg_et_cari"/>


</RelativeLayout>